<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="@integer/animation_dur_med"
    >

    <scale
        android:fromXScale="@fraction/animation_scale_init"
        android:fromYScale="@fraction/animation_scale_init"
        android:toXScale="@fraction/animation_scale_final"
        android:toYScale="@fraction/animation_scale_final"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>

    <alpha
        android:fromAlpha="@integer/alpha_init"
        android:toAlpha="@integer/alpha_final"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator" />


</set>